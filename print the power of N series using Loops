#include<stdio.h>

int main()
{
    int base,number,power=1;
    printf("enter base & maimum power");
    scanf("%d%d",&base,&number);
    printf("1,");
    for(int i=1;i<=number;i++)
    {
        power=power*base;
        printf(" %d,",power);
    }
}
